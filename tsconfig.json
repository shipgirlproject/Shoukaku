{
  "compilerOptions": {
    "allowJs": true,
    "module": "node16",
    "moduleResolution": "node16",
    "outDir": "dist",
    "target": "es2020",
    "declaration": true,                              
    "declarationMap": true, 
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}